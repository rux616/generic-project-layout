    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "Build (Release)",
            "type": "shell",
            "command": "make",
            "group": "build",
            "problemMatcher": "$gcc"
            
        },
        {
            "taskName": "Build (Debug)",
            "type": "shell",
            "command": "make debug",
            "group": "build",
            "problemMatcher": "$gcc"
            
        },
        {
            "taskName": "Clean",
            "type": "shell",
            "command": "make clean",
            "group": "build",
            "problemMatcher": "$gcc"
        }
    ]
}