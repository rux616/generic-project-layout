{
    "C_Cpp.intelliSenseEngine": "Default",
    "workbench.iconTheme": "vscode-icons",
    "[makefile]": {
        "editor.insertSpaces": false
    },
    "editor.rulers": [
        100
    ],
    "markdownlint.config": {
        "MD013": false,
        "MD009": {"br_spaces": 2}
    },
    "todohighlight.include": [
        "**/*.cpp",
        "**/*.hpp",
        "**/makefile"
    ],
    "todohighlight.keywords": [
        {
            "text": "FIXME:",
            "color": "white",
            "backgroundColor": "darkred",
            "isWholeLine": false
        },
        {
            "text": "TODO:",
            "color": "white",
            "backgroundColor": "green",
            "isWholeLine": false
        }
    ]
}